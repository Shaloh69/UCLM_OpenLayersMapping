# NPM Configuration for UCLM OpenLayers Mapping Project
# This ensures smooth installation of all dependencies

# Use legacy peer dependency resolution for maximum compatibility
legacy-peer-deps=true

# Keep package-lock disabled for flexibility
package-lock=false

# Increase timeout for slow connections
fetch-timeout=300000

# Enable strict SSL (set to false only if behind corporate proxy)
strict-ssl=true

# Save exact versions (no ^ or ~ in package.json when using npm install --save)
save-exact=true

# Use current Node.js version's engine
engine-strict=false
